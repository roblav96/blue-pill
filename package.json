{
	"name": "blue-pill",
	"version": "0.2.2",
	"description": "Don't take the ðŸ”´ red pill down some rabbit hole, the ðŸ”µ blue pill will keep you focused on a task",
	"main": "dist/index.js",
	"files": [
		"/assets",
		"/dist"
	],
	"bin": {
		"blue-pill": "./dist/index.js"
	},
	"nodemonConfig": {
		"env": {
			"NODE_ENV": "development"
		},
		"exec": "node --inspect",
		"ext": "js",
		"restartable": false,
		"quiet": true,
		"watch": "dist"
	},
	"scripts": {
		"del": "del dist node_modules",
		"prepublishOnly": "del dist; tsc --declaration",
		"watch": "del dist; npm-run-all --silent --parallel watch:*",
		"watch:nodemon": "wait-for-change dist/index.js && delay 0.1 && nodemon dist/index.js",
		"watch:tsc": "tsc --watch --preserveWatchOutput",
		"#watch:watchexec": "wait-for-change dist/index.js && delay 0.1 && watchexec --verbose --no-shell --restart --watch dist --exts js --no-default-ignore -- node --inspect dist/index.js"
	},
	"dependencies": {
		"configstore": "^5.0.1",
		"enquirer": "^2.3.6",
		"execa": "^4.0.3",
		"exit-hook": "^2.2.0",
		"fs-extra": "^9.0.1",
		"junk": "^3.1.0",
		"loudness": "^0.3.0",
		"node-env-dev": "^1.8.40",
		"node-notifier": "^7.0.1",
		"node-schedule": "^1.3.2",
		"ora": "^4.0.4",
		"p-all": "^3.0.0",
		"p-queue": "^6.5.0",
		"pify": "^5.0.0",
		"rambda": "^5.9.0",
		"rambdax": "^3.7.0",
		"string-fn": "^2.12.0",
		"which": "^2.0.2"
	},
	"devDependencies": {
		"@types/configstore": "^4.0.0",
		"@types/fs-extra": "^9.0.1",
		"@types/node": "^14.0.23",
		"@types/node-notifier": "^6.0.1",
		"@types/node-schedule": "^1.3.0",
		"@types/pify": "^3.0.2",
		"@types/which": "^1.3.2",
		"cpy-cli": "^3.1.1",
		"cross-env": "^7.0.2",
		"del-cli": "^3.0.1",
		"delay-cli": "^1.1.0",
		"dts-generate": "^1.4.5",
		"make-dir-cli": "^2.0.0",
		"nodemon": "^2.0.4",
		"npm-run-all": "^4.1.5",
		"ts-node": "^8.10.2",
		"type-fest": "^0.16.0",
		"typescript": "^3.9.6",
		"wait-for-change": "^1.1.1"
	},
	"keywords": [
		"rabbit hole",
		"blue pill",
		"reminder",
		"OCD",
		"ADD",
		"ADHD",
		"overthink",
		"overthinking",
		"notification",
		"focus",
		"focused",
		"productivity"
	],
	"license": "Unlicense",
	"author": "Robert Laverty <roblav96@gmail.com> (https://github.com/roblav96)",
	"homepage": "https://github.com/roblav96/blue-pill#readme",
	"repository": "github:roblav96/blue-pill",
	"bugs": "https://github.com/roblav96/blue-pill/issues"
}
