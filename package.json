{
	"name": "blue-pill",
	"version": "0.1.0",
	"description": "Don't take the ðŸ”´ red pill down some rabbit hole, the ðŸ”µ blue pill will keep you focused",
	"main": "dist/index.js",
	"files": [
		"dist",
		"sounds"
	],
	"bin": {
		"bp": "dist/index.js"
	},
	"scripts": {
		"clean": "del dist node_modules",
		"prepublishOnly": "del dist; tsc",
		"start": "del dist; run-p -s start:*",
		"start:tsc": "tsc -w",
		"start:watch": "nodemon -q",
		"test": "del dist; tsc; node dist/index.js"
	},
	"dependencies": {
		"dayjs": "latest",
		"enquirer": "latest",
		"fs-extra": "latest",
		"lodash": "latest",
		"loudness": "latest",
		"node-notifier": "latest",
		"node-schedule": "latest",
		"play-sound": "latest",
		"prompts": "latest"
	},
	"devDependencies": {
		"@types/fs-extra": "latest",
		"@types/lodash": "latest",
		"@types/node": "latest",
		"@types/node-notifier": "latest",
		"@types/node-schedule": "latest",
		"@types/prompts": "latest",
		"cpy-cli": "latest",
		"del-cli": "latest",
		"nodemon": "latest",
		"npm-run-all": "latest",
		"source-map-support": "latest",
		"typescript": "latest"
	},
	"nodemonConfig": {
		"execMap": {
			"js": "test ! -e dist/index.js && true || node -r source-map-support/register"
		},
		"ext": "js",
		"restartable": false,
		"watch": "dist/**/*.js"
	},
	"keywords": [
		"rabbit hole",
		"blue pill",
		"reminder",
		"OCD",
		"ADD",
		"ADHD",
		"overthink",
		"overthinking",
		"notification",
		"focus",
		"focused",
		"productivity"
	],
	"license": "Unlicense",
	"author": "Robert Laverty <roblav96@gmail.com> (https://github.com/roblav96)",
	"homepage": "https://github.com/roblav96/blue-pill#readme",
	"repository": "github:roblav96/blue-pill",
	"bugs": "https://github.com/roblav96/blue-pill/issues"
}
