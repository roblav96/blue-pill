{
	"name": "blue-pill",
	"version": "0.2.0",
	"description": "Don't take the ðŸ”´ red pill down some rabbit hole, the ðŸ”µ blue pill will keep you focused on a task",
	"main": "dist/blue-pill.js",
	"files": [
		"dist"
	],
	"bin": {
		"blue-pill": "dist/blue-pill.js"
	},
	"nodemonConfig": {
		"restartable": false
	},
	"scripts": {
		"del": "del dist node_modules",
		"prepublishOnly": "del dist; cpy assets dist/assets; tsc --declaration",
		"watch": "del dist; cpy assets dist/assets; cross-env NODE_ENV=development npm-run-all --silent --parallel watch:*",
		"#watch:watchexec": "watchexec --postpone --restart --watch dist --exts js -- node dist/blue-pill.js",
		"watch:nodemon": "wait-for-change dist/blue-pill.js && nodemon --quiet --watch dist --ext js --exec 'node --inspect' -- dist/blue-pill.js",
		"watch:tsc": "tsc --watch --preserveWatchOutput"
	},
	"dependencies": {
		"configstore": "^5.0.1",
		"enquirer": "^2.3.6",
		"execa": "^4.0.3",
		"exit-hook": "^2.2.0",
		"fs-extra": "^9.0.1",
		"loudness": "^0.3.0",
		"node-notifier": "^7.0.1",
		"node-schedule": "^1.3.2",
		"ora": "^4.0.4",
		"pify": "^5.0.0",
		"play-sound": "^1.1.3",
		"rambda": "^5.9.0",
		"rambdax": "^3.7.0",
		"shelljs": "^0.8.4",
		"which": "^2.0.2"
	},
	"devDependencies": {
		"@types/configstore": "^4.0.0",
		"@types/fs-extra": "^9.0.1",
		"@types/node": "^14.0.23",
		"@types/node-notifier": "^6.0.1",
		"@types/node-schedule": "^1.3.0",
		"@types/pify": "^3.0.2",
		"@types/shelljs": "^0.8.8",
		"@types/which": "^1.3.2",
		"cpy-cli": "^3.1.1",
		"cross-env": "^7.0.2",
		"del-cli": "^3.0.1",
		"dts-generate": "^1.4.5",
		"make-dir-cli": "^2.0.0",
		"node-env-dev": "^1.8.38",
		"nodemon": "^2.0.4",
		"npm-run-all": "^4.1.5",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.6",
		"wait-for-change": "^1.1.1"
	},
	"keywords": [
		"rabbit hole",
		"blue pill",
		"reminder",
		"OCD",
		"ADD",
		"ADHD",
		"overthink",
		"overthinking",
		"notification",
		"focus",
		"focused",
		"productivity"
	],
